<gradleEnterprise>
  <server>
    <url>http://potato:9080</url>
    <!-- adjust depending on whether trusted cert is already configured in GE: -->
    <allowUntrusted>true</allowUntrusted>
  </server>
  <buildScan>
    <publish>ALWAYS</publish>
    <capture>
      <goalInputFiles>true</goalInputFiles>
    </capture>
    <!-- adjust to your CI provider: -->
    <backgroundBuildScanUpload>true</backgroundBuildScanUpload>
  </buildScan>
  <buildCache>
    <local>
      <enabled>true</enabled>
    </local>
    <remote>
      <enabled>true</enabled>
    </remote>
  </buildCache>
</gradleEnterprise>